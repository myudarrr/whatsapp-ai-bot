# WhatsApp AI Bot - Environment Configuration

# Application
APP_NAME="WhatsApp AI Bot"
APP_VERSION="1.0.0"
APP_URL="http://localhost"
APP_DEBUG=true
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_NAME=whatsapp_bot
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# Security
JWT_SECRET=whatsapp-bot-secret-key-change-in-production-2024
SESSION_LIFETIME=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_CREDENTIALS=true

# Local Development Server
LOCAL_SERVER_HOST=localhost
LOCAL_SERVER_PORT=8080
FRONTEND_URL="http://localhost:5173"

# Groq API (Default - akan dioverride oleh user config)
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_DEFAULT_MODEL=mixtral-8x7b-32768
GROQ_MAX_TOKENS=500
GROQ_TEMPERATURE=0.7

# WhatsApp Configuration
WHATSAPP_TIMEOUT=30
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_SESSION_TIMEOUT=300

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=storage/uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Logging
LOG_LEVEL=INFO
LOG_MAX_FILES=30
LOG_PATH=storage/logs/
LOG_ROTATION=daily

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_ENABLED=true

# Cache Configuration
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600

# Email Configuration (Optional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@whatsappbot.com
SMTP_FROM_NAME="WhatsApp Bot"
SMTP_ENCRYPTION=tls

# Timezone
APP_TIMEZONE=Asia/Jakarta

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System sedang dalam maintenance"
